<div class="span12">
<table id="address-book" class="table table-bordered table-hover">
  <thead>
    <tr>
      <% Settings.sections.each do |section| %>
        <% section.fields.each do |field| %>
          <% unless field.pdf_addressbook_ignore %>
            <% values = @user_entry[field.name.to_sym].length < 1 ? [""] : @user_entry[field.name.to_sym][0..0] %> 
            <% values.each do |value| %>
              <th class="<%= field.name %>">
                <%= field.label %>
              </th>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <tbody border="3">
    <% @users.each do |user| %>
      <tr>
        <% Settings.sections.each do |section| %>
          <% section.fields.each do |field| %>
            <% unless field.pdf_addressbook_ignore %>
              <% values = user[field.name.to_sym].length < 1 ? [""] : user[field.name.to_sym][0..0] %> 
              <% values.each do |value| %>
                <td class="<%= field.name %>">
                  <%= value.force_encoding('UTF-8') %>
                  <hr/>
                </td>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
